<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDarkMode"
    android:orientation="vertical"
    tools:context=".ui.main.home.RequestsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_requests_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDarkMode" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/request_circular_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:src="@drawable/astronaut"
        app:civ_border_color="@color/colorPrimaryDarkMode"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/request_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_new_requests"
        android:textColor="@color/AccentColor"
        android:textSize="21sp"
        android:textAlignment="center"
        android:layout_marginTop="24dp"/>


</LinearLayout>